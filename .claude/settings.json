{
  "cleanupPeriodDays": 0,
  "includeCoAuthoredBy": false,
  "alwaysThinkingEnabled": true,
  "model": "opus",
  "permissions": {
    "allow": [
      "Bash(uv run:*)",
      "Bash(uv pip:*)",
      "Bash(uv add:*)",
      "Bash(uv sync:*)",
      "Bash(uv venv:*)",
      "Bash(uv python:*)",
      "Bash(pnpm:*)",
      "Bash(pnpm dlx:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(node:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(chmod:*)",
      "Bash(wc:*)",
      "Bash(git status)",
      "Bash(git diff)",
      "Bash(~/.fzf/bin/fzf:*)",
      "Read(~/.claude/**)",
      "WebFetch(domain:www.anthropic.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:github.com)",
      "WebSearch"
    ],
    "ask": [
      "Bash(git commit:*)",
      "Bash(git push:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/agent-notify.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/agent-notify.sh",
            "timeout": 30
          }
        ]
      }
    ]
  },
  "fileSuggestion": {
    "type": "command",
    "command": ".claude/hooks/file-suggestion.sh",
    "timeout": 5
  }
}
